{
  "name": "@xsolare/trip-scheduler-server",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "bun": ">=1.1.30"
  },
  "scripts": {
    "start": "bun run dist/server.js",
    "--------------------------------<      DEV       >--------------------------------": "",
    "dev": "bun run --hot --watch src/server.ts",
    "dev:debug": "bun --inspect run --hot --watch src/server.ts",
    "--------------------------------<      BUILD     >--------------------------------": "",
    "build:bun": "bun build ./src/index.ts --outdir ./dist --target bun --no-minify",
    "build": "tsup",
    "--------------------------------<   DATABASE    >---------------------------------": "",
    "db:migrate": "bun run db/migrate.ts",
    "db:generate": "bunx drizzle-kit generate",
    "db:dump": "bun run db/create-dump.ts",
    "db:check": "bun run db/check-data.ts",
    "db:seed-mock": "bun run db/seed-from-mock.ts",
    "db:seed-json": "bun run db/seed-from-json.ts",
    "db:studio": "bunx drizzle-kit studio",
    "db:reset": "bunx drizzle-kit drop",
    "--------------------------------< LINT & FORMAT >---------------------------------": "",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "bunx tsc --noEmit"
  },
  "dependencies": {
    "@hono/trpc-server": "^0.4.1",
    "@trpc/server": "^11.1.0",
    "drizzle-orm": "^0.44.7",
    "drizzle-zod": "^0.8.3",
    "exifr": "^7.1.3",
    "hono": "^4.10.7",
    "openai": "^6.10.0",
    "pdf-parse": "^2.4.5",
    "pg": "^8.16.3",
    "prom-client": "^15.1.3",
    "resend": "^6.5.2",
    "sharp": "^0.34.5",
    "uuid": "^13.0.0",
    "web-push": "^3.6.7",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "6.4.2",
    "@hono/swagger-ui": "^0.5.2",
    "@types/bun": "latest",
    "@types/pg": "^8.15.6",
    "@types/prompts": "^2.4.9",
    "@types/uuid": "^11.0.0",
    "@types/web-push": "^3.6.4",
    "bun": "^1.3.3",
    "bun-types": "^1.3.3",
    "drizzle-kit": "^0.31.7",
    "eslint": "9.39.1",
    "eslint-plugin-format": "1.1.0",
    "prompts": "^2.4.2",
    "trpc-to-openapi": "^3.1.0",
    "tsup": "^8.5.1",
    "typescript": "5.9.3"
  }
}
