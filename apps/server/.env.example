# --- Основные настройки сервера ---
PORT=8080
NODE_ENV=development

# Путь для статики (куда скрипт копирует картинки)
STATIC_PATH=static/images

# --- URLs ---
FRONTEND_URL="http://localhost:5173"
API_URL="http://localhost:8080"

# --- SurrealDB (Настройки базы данных) ---
# Эти переменные используются в src/db.ts для подключения
SURREAL_URL="http://127.0.0.1:8000"
SURREAL_USER="root"
SURREAL_PASS="root"
SURREAL_NS="trip_scheduler"
SURREAL_DB="dev"

# --- Безопасность ---
JWT_SECRET="JWT_SECRET"

# --- OAuth (Google) ---
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:8080/api/auth/google/callback"

# --- OAuth (GitHub) ---
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"
GITHUB_CALLBACK_URL="http://localhost:8080/api/auth/github/callback"

# --- AI Services ---
AI_HUBMIX_KEY="AI_HUBMIX_KEY"
AI_HUBMIX_API_URL="https://aihubmix.com/v1"

# --- Email & Notifications ---
RESEND_API_KEY="RESEND_API_KEY"
